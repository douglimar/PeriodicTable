<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.ddmsoftware.periodictable.ResultActivity2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:background="#ffffff">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="7"
            android:rowCount="13"
            android:layout_margin="2dp"
            android:layout_weight="0.6">

            <ImageView
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:id="@+id/imgResultInfo"
                android:contentDescription="@string/image_description"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="9"
                android:src="@drawable/h"
                android:layout_margin="8dp" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvResult_Info1"
                android:layout_row="0"
                android:layout_column="2"
                android:textStyle="bold"
                android:layout_columnSpan="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResult_LatinName"
                android:id="@+id/textView"
                android:layout_row="2"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_Info2"
                android:layout_column="3"
                android:layout_row="2" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_rowSpan="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvResult_Info3"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnSpan="5"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResultGroupName"
                android:id="@+id/tvResultGroupName"
                android:layout_row="3"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvResult_Info4"
                android:layout_column="3"
                android:layout_row="3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResultPeriod"
                android:id="@+id/textView3"
                android:layout_row="5"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_info5"
                android:layout_row="5"
                android:layout_column="3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvAtomicWeight"
                android:id="@+id/textView4"
                android:layout_row="6"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_info6"
                android:layout_row="6"
                android:layout_column="3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResultDensity"
                android:id="@+id/textView5"
                android:layout_row="7"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_info7"
                android:layout_row="7"
                android:layout_column="3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResultPontoFusao"
                android:id="@+id/textView6"
                android:layout_row="8"
                android:layout_column="2"
                android:textStyle="bold"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_info8"
                android:layout_row="8"
                android:layout_column="3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvResultPontoEbulicao"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_column="2"
                android:layout_row="9"
                android:paddingRight="3dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvResult_info9"
                android:layout_column="3"
                android:layout_row="9"
                android:textSize="16dp" />

        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_material_light">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnBack"
                android:contentDescription="@string/image_description"
                android:src="@drawable/back"
                android:background="@color/background_material_light"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnWiki"
                android:contentDescription="@string/image_description"
                android:src="@drawable/wiki"
                android:background="@color/background_material_light"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_description"
                android:id="@+id/imageButton3"
                android:src="@drawable/share"
                android:background="@color/background_material_light"
                android:layout_margin="8dp"
                android:layout_weight="1" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="@string/banner_ad_unit_TESTE"
            android:id="@+id/adViewResult"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>

</RelativeLayout>
