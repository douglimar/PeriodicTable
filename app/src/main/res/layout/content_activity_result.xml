<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.ddmsoftware.periodictable.ActivityResult"
    tools:showIn="@layout/activity_activity_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/button_material_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvResultTitle"
            android:textColor="#ffffff"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/button_material_light">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.666"
            android:layout_margin="5dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:gravity="center_horizontal"
            android:id="@+id/linearLateral">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvResultElement1"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/imgViewResult"
                android:contentDescription="@string/image_description"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="4"
                android:src="@drawable/h"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutButtons"
                android:gravity="center_horizontal"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbBtnBack"
                    android:src="@drawable/back"
                    android:background="#ffffff"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgBtnShare"
                    android:src="@drawable/share"
                    android:background="#ffffff"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbBtnWiki"
                    android:src="@drawable/wiki"
                    android:background="#ffffff"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.333">

            <!-- A CardView that contains a TextView -->

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_table"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="7"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/z"
                        android:id="@+id/textView32"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_columnWeight="0.333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pipe"
                        android:id="@+id/textView42"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:textStyle="normal"
                        android:layout_gravity="center_horizontal"
                        android:layout_rowSpan="2"
                        android:textSize="40dp"
                        android:textColor="#e1dcdc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:id="@+id/textView33"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_columnWeight="0.333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pipe"
                        android:id="@+id/textView45"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:textStyle="normal"
                        android:layout_gravity="center_horizontal"
                        android:layout_rowSpan="2"
                        android:textSize="40dp"
                        android:textColor="#e1dcdc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group"
                        android:id="@+id/textView34"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pipe"
                        android:id="@+id/textView44"
                        android:layout_row="0"
                        android:layout_column="5"
                        android:textStyle="normal"
                        android:layout_gravity="center_horizontal"
                        android:layout_rowSpan="2"
                        android:textSize="40dp"
                        android:textColor="#e1dcdc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tvResultPeriod"
                        android:id="@+id/textView41"
                        android:layout_column="6"
                        android:layout_row="0"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_columnWeight="0.333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvResultZ"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvResultElement"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvResultGroup"
                        android:layout_column="4"
                        android:layout_row="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvResultPeriod"
                        android:layout_column="6"
                        android:layout_row="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"/>

                </GridLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_viewAdMob"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- A CardView that contains a TextView and a AdView-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/advertisement"
                        android:textStyle="bold"
                        android:layout_margin="2dp"/>

                    <com.google.android.gms.ads.AdView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_ad_unit_TESTE"
                        android:id="@+id/adViewResult"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_main_info"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:id="@+id/textView62"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvResult_LatinName"
                            android:id="@+id/textView63"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResult_LatimName"
                            android:layout_row="1"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/originName"
                            android:id="@+id/textView79"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResult_Element2"
                            android:layout_row="0"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResultOriginName"
                            android:layout_row="2"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvAtomicWeight"
                            android:id="@+id/textView81"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResultAtomicWeigth"
                            android:layout_row="3"
                            android:layout_column="1"/>

                    </GridLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_Adicional_Info"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                android:background="@android:drawable/editbox_dropdown_light_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:columnCount="2"
                        android:rowCount="7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvResultDensity"
                            android:id="@+id/tvLabelDensidade"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvResultPontoFusao"
                            android:id="@+id/tvLabelFusap"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResultFusao"
                            android:layout_row="1"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tvResultPontoEbulicao"
                            android:id="@+id/tvLabelEbulicao"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResultDensidade"
                            android:layout_row="0"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResultEbulicao"
                            android:layout_row="2"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/abundancia"
                            android:id="@+id/tvLabelAbundancia"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResult_Abundancia"
                            android:layout_row="3"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/CJC_10"
                            android:id="@+id/tvLabel_CJ"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResult_CJ"
                            android:layout_row="4"
                            android:layout_column="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/x10"
                            android:id="@+id/tvLabelX10"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/tvResult_X10"
                            android:layout_row="5"
                            android:layout_column="1"/>

                    </GridLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!-- A CardView that contains a TextView -->


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
